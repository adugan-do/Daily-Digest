# Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys

# Claude AI API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gmail API Credentials
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# News API Key (from https://newsapi.org/)
NEWS_API_KEY=your_newsapi_key_here

# Google API Key (for Calendar and Maps)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CALENDAR_CREDENTIALS=path_to_your_google_calendar_credentials.json

# Weather API Key (from https://openweathermap.org/)
WEATHER_API_KEY=your_weather_api_key_here

# Traffic API Key (Google Routes API)
# Get from: https://console.cloud.google.com/ (enable Routes API)
TRAFFIC_API_KEY=your_google_routes_api_key_here

# Commute Routes Configuration (optional - for traffic data)
# Format: [{"name": "Route Name", "origin": "Address", "destination": "Address"}]
# Example: COMMUTE_ROUTES=[{"name":"Home to Work","origin":"123 Main St, City","destination":"456 Office Blvd, City"}]
COMMUTE_ROUTES=[]

# Todoist API Key (from https://todoist.com/app/settings/integrations)
TODOIST_API_KEY=your_todoist_api_key_here

# Application Settings
DEBUG=false
DEFAULT_LOCATION=New York, NY
MAX_EMAILS_TO_FETCH=20
MAX_NEWS_ARTICLES=10

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=["*"]
